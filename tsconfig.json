{
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "ES2017",
      "ESNext"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "rootDir": "src",
    "moduleResolution": "Node",
    "paths": {},
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}